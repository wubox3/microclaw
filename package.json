{
  "name": "microclaw",
  "version": "0.1.0",
  "description": "Multi-channel AI assistant with hybrid memory search",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc --noEmit && tsx src/index.ts",
    "start": "node --import tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "typecheck": "tsc --noEmit",
    "skill:install": "tsx src/skills/install-skill.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@hapi/boom": "^10.0.1",
    "@hono/node-server": "^1.14.1",
    "@slack/bolt": "^4.6.0",
    "@whiskeysockets/baileys": "^6.7.16",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "google-auth-library": "^10.5.0",
    "grammy": "^1.39.3",
    "hono": "^4.11.7",
    "openai": "^6.18.0",
    "playwright-core": "^1.58.2",
    "sharp": "^0.34.5",
    "tslog": "^4.10.2",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.1",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "jiti": "^2.6.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
